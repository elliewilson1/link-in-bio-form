<h1>Add a new item</h1>

<form action="/insert_item" method="post">
  <div>
    <label for="query_link_url">Link URL</label>
    <input id="query_link_url" type="text" placeholder="Enter a URL...">
  </div>

  <div>
    <label for="query_link_description">Link Description</label>
    <input id="query_link_description" type="text" placeholder="Enter a link description...">
  </div>

  <div>
    <label for="query_thumbnail_url">Thumbnail URL</label>
    <input id="query_thumbnail_url" type="text" placeholder="Enter a thumbnail URL...">
  </div>

  <button>Create item</button>
</form>
