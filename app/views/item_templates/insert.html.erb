<h1>Add a new item</h1>

<form action="/insert_item" method="post">
  <div>
    <label for="link_url_box">Link URL</label>
    <input id="link_url_box" name="query_link_url" type="text" placeholder="Enter a URL...">
  </div>

  <div>
    <label for="link_description_box">Link Description</label>
    <input id="link_description_box" name="query_link_description" type="text" placeholder="Enter a link description...">
  </div>

  <div>
    <label for="thumbnail_url_box">Thumbnail URL</label>
    <input id="thumbnail_url_box" name="query_thumbnail_url" type="text" placeholder="Enter a thumbnail URL...">
  </div>

  <button>Create item</button>
</form>
